<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginVertical="@dimen/dialog_margin_Y"
    android:layout_marginHorizontal="@dimen/dialog_margin_X"
    android:id="@+id/monthly_income_input_dialog" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/monthly_income_input_dialog_name_label"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/font_size_normal"
                android:textColor="@color/colorSecondary"
                android:text="名前" />

            <EditText
                android:id="@+id/monthly_income_input_dialog_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:maxLength="10"
                android:layout_marginRight="10dp"
                android:inputType="text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/monthly_income_input_dialog_amount_label"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/font_size_normal"
                android:textColor="@color/colorSecondary"
                android:text="金額（千円）" />

            <EditText
                android:id="@+id/monthly_income_input_dialog_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number" />

            <TextView
                android:id="@+id/monthly_income_input_dialog_amount_yen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:textSize="@dimen/font_size_normal"
                android:textColor="@color/colorSecondary"
                android:text="000円" />
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
